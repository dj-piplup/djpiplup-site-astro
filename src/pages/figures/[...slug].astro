---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import FigurePage from '../../layouts/FigurePage.astro';

export async function getStaticPaths() {
	const posts = await getCollection('figures');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'figures'>;

const post = Astro.props;
const { Content } = await render(post);
---

<FigurePage {...post.data}>
	<Content />
</FigurePage>
